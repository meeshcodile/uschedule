<div class="container">
    {{#if success_messages}}
    <div class="alert alert-success alert-dismissible  show mt-2 auto-hide" role="alert">
        <h2>{{success_messages}}</h2>
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">x</span>
        </button>
    </div>
    {{/if}}

    {{#if error_messages}}
    <div class="alert alert-danger alert-dismissible  show mt-2 auto-hide" role="alert">
        <h2>{{error_messages}}</h2>
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">x</span>
        </button>
    </div>
    {{/if}}

</div>


<!--================ Start Blog Area =================-->
<section class="section_gap blog_area">
    <div class="container appointee">
        <div class="row">
            <!-- appoinment area -->
            <div class="col-lg-6 ">
                <div class="recent_blog appoinment ">
                    <div class="blog_title">
                        <h2>Book an Appointment</h2>
                        <p></p>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="appoinment_form_section lite_bg">
                        <form class="form_area" id="myForm" action="" method="post">
                            <div class="row">
                                <div class="col-lg-12 form_group">
                                    <input name="name" placeholder="Patient name" onfocus="this.placeholder = ''"
                                        onblur="this.placeholder = 'Enter your name'" class="common_input form-control"
                                        required="" type="text">
                                    <input name="email" placeholder="Email address"
                                        pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{1,63}$"
                                        onfocus="this.placeholder = ''"
                                        onblur="this.placeholder = 'Enter email address'"
                                        class="common_input form-control" required="" type="email">
                        
                                        <input name="name" placeholder="Patient ID" onfocus="this.placeholder = ''"
                                            onblur="this.placeholder = 'Enter your name'" class="common_input form-control" required="" type="text">
                                
                                    <select class="default-select select2">
                                        <option data-display="Doctorâ€™s name">Select Hospital</option>
                                        <option value="1">JUTH</option>
                                        <option value="2">Plateau Hospital</option>
                                        <option value="2">Ecwa Hospital</option>
                                        <option value="2">Hope Hospital</option>
                                    </select>
                                    
                                    <input name="subject" placeholder="Appointment date" onfocus="this.placeholder = ''"
                                        onblur="this.placeholder = 'Enter Subject'"
                                        class="common_input mb-10 form-control" required="" type="text">

                                    <textarea class="common_textarea form-control" name="message" placeholder="Messege"
                                        onfocus="this.placeholder = ''" onblur="this.placeholder = 'Messege'"
                                        required=""></textarea>
                                </div>
                                <div class="col-lg-12 text-center">
                                    <button class="primary-btn text-uppercase">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>