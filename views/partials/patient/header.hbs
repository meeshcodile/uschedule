<div class="container">
    {{#if success_messages}}
    <div class="alert alert-success alert-dismissible  show mt-2 auto-hide" role="alert" style="color: black">
        <strong>{{success_messages}}</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true"></span>
        </button>
    </div>
    {{/if}}

    {{#if error_messages}}
    <div class="alert alert-danger alert-dismissible  show mt-2 auto-hide" role="alert" style="color: black">
