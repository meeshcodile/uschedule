<section class="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="aa-myaccount-register">
                                <h4 style="margin-top:20px">Patient Registration</h4>
                                <form action="/patient/register" method="POST" class="aa-login-form">
                                    <label for="">First Name<span>*</span></label>
                                    <input type="text" name="firstName" placeholder="First name" required>

                                    <label for="">Last Name<span>*</span></label>
                                    <input type="text" name="lastName" placeholder="Last name" required>

                                    <label for="">E-mail <span>*</span></label>
                                    <input type="email" name="email" placeholder="email" required>

                                    <label for="">Blood Group <span>*</span></label>
                                    <select class="default-select select2" name="bloodGroup" >
                                        <option data-display="Blood Group">Select Blood Group</option>
                                        <option>Don't know</option>
                                        <option>AB+</option>
                                        <option>O-</option>
                                        <option>O+</option>
                                        <option>A+</option>
                                        <option>B+</option>
                                        <option>A-</option>
                                        <option>B-</option>
                                        <option>AB-</option>


                                    </select>
                                    <label for="">Password<span>*</span></label>
                                    <input type="password" name="password" placeholder="Password" required>

                                    <label for="">Confirm Password<span>*</span></label>
                                    <input type="password" name="confirmPassword" placeholder="Password" required>

                                    <label for="">Phone number<span>*</span></label>
                                    <input type="text" name="phoneNumber" pattern="[0-9]*" minlength="11" maxlength="11" placeholder="Phone number" required>

                                    <label for="">Full address<span>*</span></label>
                                    <input type="text" name="fullAddress" placeholder="address" required>

                            
                                    <button type="submit" class="aa-browse-btn mb-4">Register</button>
                                    <div class="text-center p-t-136">
                                        <a class="txt2" href="/user">
                                            Already have an account please login
                                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
