<div class="panel-header panel-header-sm">
</div>
<div class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="title">Profile</h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row">
                        
                            <div class="col-md-3 px-1">
                                <div class="form-group">
                                    <label>Hospital Name</label>
                                    <input type="text" class="form-control" placeholder="Username" value="{{hospital.HospitalName}}">
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email address</label>
                                    <input type="email" class="form-control" placeholder="Email" value="{{hospital.email}}">
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Address</label>
                                    <input type="text" class="form-control" placeholder="Home Address"
                                        value="{{hospital.fullAddress}}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 pr-1">
                                <div class="form-group">
                                    <label>Phone Number</label>
                                    <input type="text" class="form-control" placeholder="" value="{{hospital.phoneNumber}}">
                                </div>
                            </div>
                            <div class="col-md-4 pr-1">
                                <div class="form-group">
                                    <label>Hospital Rgistration Number</label>
                                    <input type="text" class="form-control" placeholder="City" value="{{hospital.RegNumber}}">
                                </div>
                            </div>
                            
                            
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
       
    </div>
</div>